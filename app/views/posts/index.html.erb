<h1>掲示板一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.text %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to '投稿の編集する', edit_post_path(post.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to '掲示板投稿する', new_post_path %>
